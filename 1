___________________________________ 1 завдання ______________________________
#include <iostream>     
using namespace std;        
int main() {                 
    int N;                   
    cin >> N;                
    int A[N];      
    for (int i = 0; i < N; i++)   
        cin >> A[i];                
 int maxNeg = -1000000000;     
    int index = -1;               
    for (int i = 0; i < N; i++) { 
        if (A[i] < 0 && A[i] > maxNeg) {
            maxNeg = A[i];              
            index = i;                  
        }
    }
    if (index == -1)                   
        cout << "Від’ємних елементів немає";
    else                                
        cout << "Максимальний серед від’ємних: " << maxNeg
             << ", його індекс: " << index;
    return 0;                           
}
___________________________________ 2 завдання ______________________________
#include <iostream>     // Підключення бібліотеки для вводу/виводу
using namespace std;    // Використання стандартного простору імен, щоб не писати std::

int main() {            // Початок головної функції програми
    int N;              // Оголошення змінної для кількості елементів масиву
    cout << "Введіть кількість елементів масиву: "; // Виведення запиту до користувача
    cin >> N;           // Зчитування введеної кількості елементів

    int A[N];           // Оголошення масиву розміром N

    cout << "Введіть " << N << " елементів масиву: "; // Повідомлення для введення елементів
    for(int i = 0; i < N; i++)  // Цикл для зчитування кожного елемента масиву
        cin >> A[i];            // Зчитування i-го елемента

    int B, A1;           // Оголошення змінних B і A1 для порогових значень
    cout << "Введіть порогове значення B: ";  // Запит значення B
    cin >> B;            // Зчитування B

    cout << "Введіть порогове значення A1: "; // Запит значення A1
    cin >> A1;           // Зчитування A1

    int minVal = 1000000000;   // Ініціалізація змінної для пошуку мінімального значення (дуже велике число)

    for(int i = 0; i < N; i++) {       // Цикл по елементах масиву
        if (A[i] > A1)                 // Якщо елемент більший за A1
            break;                    // Перервати цикл (далі елементи не розглядаються)

        if (A[i] < B && A[i] < minVal) // Якщо елемент менший за B і поточний мінімум
            minVal = A[i];             // Оновити мінімальне значення
    }

    if(minVal == 1000000000)           // Якщо мінімальне значення не змінилося (не знайдено підхожих елементів)
        cout << "Елементів, що задовольняють умову, немає"; // Вивести відповідне повідомлення
    else                               // Якщо знайдено підхожий елемент
        cout << "Мінімальний елемент: " << minVal;          // Вивести мінімальний елемент

    return 0;                          // Завершення програми
}


